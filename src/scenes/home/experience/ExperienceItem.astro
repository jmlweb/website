---
import ExternalLink from '@/components/ExternalLink.astro';
import { Icon } from 'astro-icon/components';

interface Props {
  period: string;
  position: string;
  company: {
    title: string;
    href: string;
  };
}

const { period, position, company } = Astro.props;
---

<article
  class="group/article grid-row-span-2 duration-750 relative row-span-2 flex-1 rounded border border-slate-200 bg-slate-50 px-4 transition ~mb-4/8 last:mb-0 odd:col-start-1 odd:col-end-1 even:col-start-3 even:col-end-3 lg:px-6 dark:border-slate-800 dark:bg-slate-900 [&:nth-child(2)]:row-start-2 [&:nth-child(2)]:row-end-4"
>
  <header class="pt-4 lg:pt-6">
    <p
      class="flex items-center font-medium tracking-tight text-slate-500 ~text-sm/base dark:text-slate-400"
    >
      <Icon
        name="ri:calendar-2-line"
        class="mr-1 size-4 text-slate-400 dark:text-slate-500"
        aria-hidden="true"
      />
      {period}
    </p>
    <h3
      class="mt-2 flex flex-wrap items-center font-semibold leading-none ~text-base/lg dark:text-slate-200"
    >
      <span lang="en">{position}</span>
      <Icon
        name="ri:at-line"
        class="mx-1 size-4 text-slate-400 dark:text-slate-500"
        aria-label="@"
      />
      <ExternalLink
        href={company.href}
        data-umami-event="Experience company"
        data-umami-event-company={company.title}
        class="text-indigo-600 transition-colors hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300"
        >{company.title}</ExternalLink
      >
    </h3>
  </header>
  <div class="content mt-1 list-decimal pb-4 lg:pb-6">
    <slot />
  </div>
  <Icon
    name="ri:circle-fill"
    class="absolute top-1/2 hidden size-3 text-teal-300 group-odd/article:-right-7 group-even/article:-left-7 lg:block dark:text-teal-600"
    aria-hidden="true"
  />
</article>

<style>
  .content :global(ul) {
    @apply flex flex-col ~mt-2/3 ~gap-2/3;
  }
</style>
