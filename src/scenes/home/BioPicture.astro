---
import { Image } from 'astro:assets';
import pictureSrc from '@/images/jmlweb.jpg';
---

<bio-picture
  class="bio-picture relative max-w-[80px] flex-1 rounded-full bg-gray-400 md:max-w-[120px] lg:mt-14 lg:max-w-[200px] lg:scale-x-[-1] dark:bg-gray-700"
  aria-hidden
>
  <Image
    src={pictureSrc}
    width="200"
    height="200"
    widths={[80, 120, 200]}
    sizes="(max-width: 767px) 80px (max-width: 1023px) 120px, 200px"
    alt=""
    loading="eager"
    class="inline-block w-full overflow-hidden rounded-full border border-gray-500/20 object-cover object-center dark:border-gray-500/10"
  />
</bio-picture>

<script>
  class BioPicture extends HTMLElement {
    connectedCallback() {
      const picture = this.querySelector<HTMLImageElement>('img');
      if (!picture) {
        return;
      }
      const duplicatedPicture = picture.cloneNode(true) as HTMLImageElement;
      duplicatedPicture.classList.remove('border', 'border-gray-500/20', 'dark:border-gray-500/10');
      duplicatedPicture.classList.add(
        'blur-2xl',
        'absolute',
        'inset-0',
        'bio-picture-blur',
        'z-[-1]',
      );
      this.appendChild(duplicatedPicture);
    }
  }

  customElements.define('bio-picture', BioPicture);
</script>
