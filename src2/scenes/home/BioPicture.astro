---
import { Image } from 'astro:assets';
import pictureSrc from '@/images/jmlweb.jpg';
---

<bio-picture class="bio-picture relative flex-1 lg:mt-14 lg:scale-x-[-1]" aria-hidden>
  <Image
    src={pictureSrc}
    width="200"
    height="200"
    widths={[80, 120, 200]}
    sizes="(max-width: 767px) 80px (max-width: 1023px) 120px, 200px"
    alt=""
    loading="eager"
    class="inline-block max-h-[200px] w-full max-w-[200px] overflow-hidden rounded-full border border-slate-500/20 bg-slate-400 dark:border-slate-500/10 dark:bg-slate-700"
  />
</bio-picture>

<script>
  class BioPicture extends HTMLElement {
    connectedCallback() {
      const picture = this.querySelector<HTMLImageElement>('img');
      if (!picture) {
        return;
      }
      const duplicatedPicture = picture.cloneNode(true) as HTMLImageElement;
      duplicatedPicture.classList.remove(
        'border',
        'border-slate-500/20',
        'dark:border-slate-500/10',
      );
      duplicatedPicture.classList.add(
        'blur-2xl',
        'absolute',
        'inset-0',
        'bio-picture-blur',
        'z-[-1]',
      );
      this.appendChild(duplicatedPicture);
    }
  }

  customElements.define('bio-picture', BioPicture);
</script>
